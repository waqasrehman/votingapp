<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/mylogo"
        android:layout_weight="0.21" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.21">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21">

            <EditText
                android:id="@+id/Name_"
                style="@style/Base.V7.Widget.AppCompat.EditText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/Register_submit"
                android:layout_below="@+id/Name_label"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColorLink="@android:color/holo_blue_bright" />

            <TextView
                android:id="@+id/Name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="58dp"
                android:text="Enter Name :" />

            <EditText
                android:id="@+id/email_register"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_label"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColorLink="@android:color/holo_blue_bright" />

            <EditText
                android:id="@+id/password_register"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/email_register"
                android:layout_below="@+id/password_label"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textColorLink="@android:color/holo_blue_bright" />

            <Button
                android:id="@+id/Register_submit"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/password_register"
                android:layout_below="@+id/password_register"
                android:layout_marginTop="34dp"
                android:background="@drawable/round_button"
                android:onClick="OnSubmit"
                android:text="Submit" />

            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Name_"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Enter Email:" />

            <TextView
                android:id="@+id/password_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:text="Enter Password :" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>