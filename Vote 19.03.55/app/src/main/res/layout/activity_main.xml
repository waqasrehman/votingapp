<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainactivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:weightSum="1"
    tools:context="com.example.waqasur_rehman.vote.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="14dp">

        <Button
            android:id="@+id/vote"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/upload"
            android:onClick="upload_UI"
            android:paddingTop="50dp"
            android:text="Upload" />

        <Button
            android:id="@+id/result"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/result"
            android:onClick="ViewResult"
            android:paddingTop="50dp"
            android:text="Result" />

        <Button
            android:id="@+id/message"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignEnd="@+id/vote"
            android:layout_below="@+id/vote"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/message"
            android:onClick="onEmail"
            android:paddingTop="50dp"
            android:text="Email" />

        <Button
            android:id="@+id/schedules_employee"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/message"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/schedule"
            android:onClick="openPlanner"
            android:paddingTop="50dp"
            android:text="Schedules Planner" />

        <Button
            android:id="@+id/info"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignBottom="@+id/qr_generation"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/help"
            android:onClick="openInfo"
            android:paddingTop="50dp"
            android:text="Info" />

        <Button
            android:id="@+id/qr_generation"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/schedules_employee"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_button"
            android:drawableTop="@mipmap/qr"
            android:onClick="OpenQRGenerator"
            android:paddingTop="50dp"
            android:text="QR Survey" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/vote"
            android:layout_alignTop="@+id/vote"
            app:srcCompat="@mipmap/upload" />

        <Button
            android:id="@+id/logout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@drawable/round_button"
            android:onClick="onLogout"
            android:text="Logout" />

    </RelativeLayout>

</LinearLayout>